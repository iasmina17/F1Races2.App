<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="F1Races2.MainPage"
             BackgroundColor="Red">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="download.png"
                SemanticProperties.Description="F1Races manager!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Welcome to your F1Race manager!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Start managing your F1Races today"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Start managing your F1Races today"
                FontSize="18"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>